{
	"_metadata": {
		"version": "3.0",
		"description": "配置文件，定义LaTeX文档的各项参数"
	},
	"TEX": {
		"author": "Aiza",
		"subject": "文档主题",
		"title": {
			"content": "文档标题",
			"note": "标题页额外内容"
		},
		"code": {
			"font_family": "Fira Code",
			"font_size": "6pt",
			"line_height": "6pt",
			"auto_break_lines": true,
			"tab_size": 4,
			"space_before": "1em",
			"space_after": "1em",
			"keyword_color": "blue",
			"comment_color": "green!50!black",
			"string_color": "red",
			"bg_color": "gray!3"
		},
		"hyperref": {
			"enable_colorlinks": true,
			"link_color": "blue",
			"file_color": "magenta",
			"url_color": "cyan",
			"numbered_bookmarks": true,
			"open_bookmarks": false
		},
		"geometry": {
			"paper_size": "a4paper",
			"left_margin": "1cm",
			"right_margin": "1cm",
			"top_margin": "1cm",
			"bottom_margin": "1.2cm",
			"column_sep": "1cm"
		},
		"global": {
			"main_font": "Times New Roman",
			"cjk_main_font": "SimSun",
			"page_style": "plain"
		}
	},
	"PROGRAM": {
		"build_directory": "build",
		"code_source_directory": "code",
		"include_file_types": [".cpp", ".c", ".json", ".tex", ".hpp", ".h", ".py", ".txt"],
		"output_file_name": "output"
	}
}